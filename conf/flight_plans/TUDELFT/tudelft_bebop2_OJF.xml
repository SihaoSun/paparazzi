<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="1.9" ground_alt="0" lat0="51.990634" lon0="4.376789" max_dist_from_home="5" name="TUDelft Cyberzoo" security_height="0.4" qfu="0">
  <header>
#include "autopilot.h"
#include "subsystems/ahrs.h"
#include "subsystems/electrical.h"
#include "subsystems/datalink/datalink.h"
</header>
  <waypoints>
    <waypoint height="1.5" name="HOME" x="0.0" y="-0.0"/>
    <waypoint height="1.5" name="CLIMB" x="0.0" y="-1.5"/>
    <waypoint height="1.5" name="STDBY" x="0.0" y="-1.5"/>
    <waypoint height="1.5" name="CENTER" x="0.0" y="-2.0"/>
    <!--waypoint height="1.45" name="FORWARD" x="0.0" y="2.5"/-->
    <waypoint height="1.5" name="FORWARD" x="0.0" y="0.5"/> <!--for lower wind speed -->
    <waypoint height="1.5" name="BACKWARD" x="0.0" y="-4.5"/>
    <waypoint height="1.5" name="LEFT" x="-3.5" y="-1.5"/>
    <waypoint height="1.5" name="RIGHT" x="3.5" y="-1.5"/>
    <waypoint height="1.5" name="TD" x="0.0" y="0.5"/>
    <waypoint height="3.5" name="UP" x="0.0" y="-1.5"/>
    <waypoint height="0.0" name="LOW" x="0.0" y="-1.5"/>
        
    <!--waypoint lat="51.9906213" lon="4.3768628" name="_CZ1"/>
    <waypoint lat="51.9905874" lon="4.3767766" name="_CZ2"/>
    <waypoint lat="51.9906409" lon="4.3767226" name="_CZ3"/>
    <waypoint lat="51.9906670" lon="4.3768060" name="_CZ4"/>
    <waypoint lat="51.990624" lon="4.376845" name="_OZ1"/>
    <waypoint lat="51.990601" lon="4.376782" name="_OZ2"/>
    <waypoint lat="51.990638" lon="4.376748" name="_OZ3"/>
    <waypoint lat="51.990657" lon="4.376804" name="_OZ4"/-->
	<waypoint name="_OZ1" x="-1.5" y="-4.5"/>
	<waypoint name="_OZ2" x="-1.5" y="0.5"/>
	<waypoint name="_OZ3" x="1.5" y="0.5"/>
	<waypoint name="_OZ4" x="1.5" y="-4.5"/>
  </waypoints>
  <sectors>
    <sector color="#FF9922" name="SafeZone">
      <corner name="_OZ1"/>
      <corner name="_OZ2"/>
      <corner name="_OZ3"/>
      <corner name="_OZ4"/>
    </sector>

  </sectors>
  <exceptions>
    <exception cond="!InsideSafeZone(GetPosX(), GetPosY())" deroute="go_center"/>
    <exception cond="GetPosAlt()>3.5" deroute="go_center"/>
    <exception cond="GetPosAlt()>4.0" deroute="Land here"/>
    <exception cond="electrical.bat_critical && !(nav_block == IndexOfBlock('Land here')) && !(nav_block == IndexOfBlock('Land')) && !(nav_block == IndexOfBlock('Flare')) && !(nav_block == IndexOfBlock('Landed'))" deroute="Land here"/>
    <!--exception cond="datalink_time > 2" deroute="Land here"/>
    <exception cond="electrical.bat_low && !(nav_block == IndexOfBlock('Land')) && !(nav_block == IndexOfBlock('Flare')) && !(nav_block == IndexOfBlock('Landed'))" deroute="Land"/>
    <exception cond="electrical.bat_critical && !(nav_block == IndexOfBlock('Land')) && !(nav_block == IndexOfBlock('Flare')) && !(nav_block == IndexOfBlock('Landed'))" deroute="Land here"/>
    <exception cond="GetAltRef()>4" deroute="Landed"/-->
  </exceptions>
  <blocks>
    <block name="Wait GPS">
      <call_once fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 2)"/>
      <call_once fun="NavSetAltitudeReferenceHere()"/>
      <call_once fun=""/>
    </block>
    <block name="Holding point">
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block key="r" name="Start Engine">
      <call_once fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block key="t" name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 1.0" deroute="go_center"/>
      <call_once fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay climb="1.0" vmode="climb" wp="CLIMB"/>
    </block>
    <block name="Start engine and go standby">
      <call_once fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="stage_time>0.25" vmode="throttle"/>
      <exception cond="stateGetPositionEnu_f()->z > 1.0" deroute="go_center"/>
      <call_once fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay climb="1.0" vmode="climb" wp="CLIMB"/>
    </block>
  <block name="Set heading to 0">
    <set value="ANGLE_BFP_OF_REAL(0.0/57.295779)" var="nav_heading"/>
    <stay wp="CENTER"/>
  </block>

	<block name="Set heading to -90">
		<set value="ANGLE_BFP_OF_REAL(-90.0/57.295779)" var="nav_heading"/>
		<stay wp="CENTER"/>
	</block>

<block name="longitude doublet">
	<stay wp="CENTER" until="stage_time>1"/>
	<set value="0" var="nav_heading"/>
	<for var="i" from="0" to="2">
		<stay wp="FORWARD" until="GetPosY()>-1.5" />
		<stay wp="BACKWARD" until="-2.3>GetPosY()" />
	</for>
	<stay wp="CENTER"/>
</block>


<block name="go_center">
	<stay wp="CENTER"/>
</block>	

    <block name="Looping heading altitude doublet">
	<stay wp="CENTER" until="stage_time>2"/>
	<for var="i" from="0" to="0"> <!-- 8 angles-->
		<set value="ANGLE_BFP_OF_REAL(-$i*15/57.295779)" var="nav_heading"/>
		<stay wp="CENTER" until="stage_time>2"/>
		<for var="j" from="2" to="4">
		<!--stay climb="$j*0.5" vmode="climb" wp="UP" until="GetPosAlt()>2.2"/>
		<stay climb="-$j*0.5" vmode="climb" wp="LOW" until="1.2>GetPosAlt()"/-->
		<stay wp="UP" until="GetPosAlt()>1.8"/>
		<stay wp="LOW" until="1.0>GetPosAlt()"/>
		</for>
    <stay wp="CENTER" vmode="alt"until="stage_time>1.0"/>
	</for>
	<stay wp="CENTER"/>
    </block>

    <block name="Loop heading latitude doublet">
	<stay wp="CENTER" until="stage_time>2"/>
	<for var="i" from="0" to="6"> <!-- 8 angles-->
		<set value="ANGLE_BFP_OF_REAL(-$i*15/57.295779)" var="nav_heading"/>
		<for var="j" from="0" to="1"> <!-- 2 maneuvres-->
		<stay wp="LEFT"  until="-0.2>GetPosX()"/>
		<stay wp="RIGHT"  until="GetPosX()>0.2"/>
		</for>
    <stay wp="CENTER"  until="stage_time>2"/>
	</for>
    </block>

    <block name="Loop heading longitude doublet">
	<!--call_once fun="gh_set_max_speed(0.7)"/-->
	<stay wp="CENTER" until="stage_time>2"/>
	<for var="i" from="0" to="6"> <!-- 5 angles-->
		<set value="ANGLE_BFP_OF_REAL(-$i*15/57.295779)" var="nav_heading"/>
		<for var="j" from="0" to="1"> <!-- 2 maneuvres--> 
		<stay wp="FORWARD" until="GetPosY()>2.0" />
		<stay wp="BACKWARD" until="0.3>GetPosY()" />
		</for>
    <stay wp="CENTER" until="stage_time>2"/>
	</for>
    </block>

    <block name="Yaw +45 angle changes">
	<stay wp="CENTER" until="stage_time>2"/>
	<for var="i" from="0" to="8">
		<set value="ANGLE_BFP_OF_REAL($i*45/57.295779)" var="nav_heading"/>
		<stay wp="CENTER" until="stage_time>1"/>
	</for>
    </block>
    <block name="Yaw -45 angle changes">
		<stay wp="CENTER" until="stage_time>2"/>
		<for var="i" from="0" to="8"> 
		<set value="ANGLE_BFP_OF_REAL(-$i*45/57.295779)" var="nav_heading"/>
		<stay wp="CENTER" until="stage_time>1"/>
	</for>
    </block>
    <block name="Yaw 180 doublets">
	<stay wp="CENTER" until="stage_time>2"/>
	<for var="i" from="0" to="8"> 
		<set value="ANGLE_BFP_OF_REAL(($i*45+90)/57.295779)" var="nav_heading"/>
		<stay wp="CENTER" until="stage_time>1.0"/>
		<set value="ANGLE_BFP_OF_REAL(($i*45-90)/57.295779)" var="nav_heading"/>
		<stay wp="CENTER" until="stage_time>2"/>
	</for>
    </block>
    
    <block key="s" name="Standby" strip_button="Standby" strip_icon="home.png">
      <call_once fun="NavSetWaypointHere(WP_STDBY)"/>
      <stay wp="STDBY"/>
    </block>
    <block key="l" name="Land here" strip_button="Land Here" strip_icon="land-right.png">
      <call_once fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="Land">
      <go wp="TD"/>
    </block>
    <block name="Flare">
      <!--exception cond="NavDetectGround()" deroute="Holding point"/-->
      <exception cond="block_time>4.0" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight()" deroute="Landed"/>
      <call_once fun="NavStartDetectGround()"/>
      <stay climb="-1.0" vmode="climb" wp="TD"/>
    </block>
    <block name="Landed">
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
