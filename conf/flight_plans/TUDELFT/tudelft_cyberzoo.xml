      <stay wp="Infront point"/>
    </block>
    <block name = "Middle point">
      <go wp="Middle point" vmode ="climb" climb="nav_descend_vspeed"/>
    </block>
    <block name = "Middle point high">
      <go wp="Middle point high" vmode ="climb" climb="nav_descend_vspeed"/>
